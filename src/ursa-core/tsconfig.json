{
  "extends": "../../tsconfig.base.json",
  "include": ["./src", "../../config/types"],
  "exclude": [
    "**/*.(?:story|mock|test|snap).(?:js|ts|jsx|tsx)",
    ".turbo",
    "coverage"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictBindCallApply": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react"
  }
}
