{
  "extends": "../../tsconfig.base.json",
  "include": ["./src", "../../config/types"],
  "exclude": [
    "**/*.story.tsx",
    "**/*.mock.ts",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.snap.ts",
    ".turbo",
    "coverage"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictBindCallApply": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "jsxImportSource": "@emotion/react"
  }
}
